[alias]
  b = branch
  f = fetch --prune
  s = status
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  plog = log --graph --oneline --all
  co = checkout
  cp = cherry-pick
  c = commit
  ca = commit --amend
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  pr = pull --rebase
  sl = shortlog -ns
